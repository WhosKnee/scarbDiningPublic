<html>
   <head>
      <title>restaurant</title>
      <!-- JS, Popper.js, and jQuery (Bootstrap files) -->
      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
      <link rel="stylesheet" href="/stylesheets/profilePage.css">
      <link rel="stylesheet" href="/stylesheets/profilePage.css">
   </head>
   <body>
      <%- include('./partials/navbar.ejs') %>
      <div class="jumbotron ">
      <h1 class="display-10 text-center"><%= customerInfo.customerFirstName%> Profile </h1>
      <div class = "container d-flex flex-column justify-content-start">
         <div class = "container d-flex flex-column justify-content-start">
            <div class="d-flex align-self-start">
               <img src="data:image/<%=customerInfo.image.contentType%>;base64, <%=customerInfo.image.data?customerInfo.image.data.toString('base64'):""%>" alt="W3Schools.com" style=height:300%>
            </div>
         </div>
      </div>
      <div class="card mt-3" style = "width: 70rem;">
         <div class = "card-body">
               <div class = "d-flex flew-row" >
            <h5 class="card-title"><%= customerInfo.customerFirstName%> <%= customerInfo.customerLastName%></h5>
             <a class="btn btn-primary ml-auto"style="margin-top: -10;"  href="/customerSignup/"+<%= customerInfo.customerFirstName%>+"/" +<%= customerInfo.customerLastName%>+"/"  role="button">Update Info</a>
            </div>
            <div class="card-header ">
               Info
            </div>
            <p>Bio : <%= customerInfo.customerBio%></p>
            <p>Address : <%= customerInfo.customerAddress%></p>
            <p>Contact : <%= customerInfo.customerPhoneNumber%> </p>
            <div class="card-header">
               Socials
            </div>
            <div class = " mt-3 d-flex flex-row align-self-start justify-content-around">
               <a href=<%= customerInfo.facebookUrl%>><i class="fa fa-twitter" style="font-size:30px"></i></a>
               <a href=<%= customerInfo.twitterUrl%>><i class="fa fa-facebook" style="font-size:30px"></i></a>
               <a href=<%= customerInfo.linkedinUrl%>><i class="fa fa-linkedin" style="font-size:30px"></i></a>
            </div>
         </div>
      </div>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
      <!-- CSS only for bootstrap-->
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
   </body>
</html>