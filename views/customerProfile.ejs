   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <link rel="stylesheet" href="/stylesheets/profilePage.css">
   <link rel="stylesheet" href="/stylesheets/profilePage.css">
</head>
<body>
   <div class="jumbotron ">
   <h1 class="display-10 text-center">Customer Page </h1>
    <div class = "container d-flex flex-column justify-content-start">
      <div class="view bg d-flex flex-row align-self-center">
         <div class="d-flex align-self-end">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d8/Person_icon_BLACK-01.svg/1200px-Person_icon_BLACK-01.svg.png" alt="W3Schools.com" style=height:300%>
         </div>
        </div>
      </div>
      <div class = "d-flex flew-row" >
        <div class="card mt-3" style = "width: 19rem;">
                      <div class = "card-body">
                      <h5 class="card-title"><%= customerInfo.customerFirstName%> <%= customerInfo.customerLastName%></h5>
                       <p><%= customerInfo.customerBio%></p>
                        <p>Address : <%= customerInfo.customerAddress%></p>
                        <p>Contact : <%= customerInfo.customerPhoneNumber%> </p>
                       <div class = "d-flex flex-row align-self-start justify-content-around">
                       <a href=<%= customerInfo.facebookUrl%>><i class="fa fa-twitter"></i></a>
                       <a href=<%= customerInfo.twitterUrl%>><i class="fa fa-facebook"></i></a>
                       <a href=<%= customerInfo.linkedinUrl%>><i class="fa fa-linkedin"></i></a>

                       </div>

                    </div>
            </div>
      <form class="complex_form" id="create_message_form">
            <div class="form_title">Post a message</div>
            <textarea  class="form_element" name="user_message" placeholder="Enter your message"></textarea>
         <button class ="button"> Post your message</button>
          </form>
    </div>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <!-- CSS only for bootstrap-->
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
