<!DOCTYPE html>
<html>
   <head>
      <title>Registration</title>
      <!-- Latest compiled and minified CSS -->
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
      <!-- jQuery library -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
      <!-- Latest compiled JavaScript -->
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
      <style type="text/css">
         #ui{
         background-color: #333;
         padding:30px;
         margin-top: 20px;
         border-radius: 10px;
         }
         #ui label, h1, h3{
         color: #fff;
         }
      </style>
   </head>
   <body>
      <div class="container">
         <div class="row">
            <div class="col-lrg-3"></div>
            <div class="col-lrg-6">
               <div id="ui">
                  <h1 class="text-center">REGISTRATION FORM</h1>
                  <br>
                  <form action="/makeCustomer/" method = "post" sclass="form-group">
                     <h3 class="text-center">Customer Information</h3>
                     <br>
                     <div class="row">
                        <div class="col-lg-6">
                           <label>First name:</label>
                           <input type="text" name="customerFirstName" class="form-control" placeholder="Enter your first name">
                        </div>
                        <div class="col-lg-6">
                           <label>Last name:</label>
                           <input type="text" name="customerLastName" class="form-control" placeholder="Enter your last name">
                        </div>
                     </div>
                     <br>
                     <div class="row">
                        <div class="col-lg-6">
                           <label>Facebook (optional):</label>
                           <input type="text" name="facebookUrl" class="form-control" placeholder="Enter your title">
                        </div>
                         <div class="col-lg-6">
                            <label> Twitter (optional) :</label>
                           <input type="text" name="twitterUrl" class="form-control" placeholder="Enter your Facebook Url">
                         </div>
                        <div class="col-lg-6">
                           <label>E-mail:</label>
                           <input type="text" name="ownerEmail" class="form-control" placeholder="Enter your Twitter Url">
                        </div>
                     </div>
                     <br>
                     <div class="row">
                        <div class="col-lg-6">
                           <label>Phone number:</label>
                           <input type="text" name="customerPhoneNumber" class="form-control" placeholder="Enter your phone number">
                        </div>
                        <div class="col-lg-6">
                           <label>Password:</label>
                           <input type="password" name="password" class="form-control" placeholder="Enter your password">
                        </div>
                     </div>
                     <br>
                     <br>
                     <input type="submit" name="submit" value="submit" class="btn btn-primary btn-block btn-lg">
                  </form>
               </div>
            </div>
            <div class="col-lrg-3"></div>
         </div>
      </div>
   </body>
</html>