<html>
    <head>
        <title>Scarborough Dining</title>
        <!-- JS, Popper.js, and jQuery (Bootstrap files) -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/stylesheets/explore.css">
    </head>

    <body>
        <% function loadRestaurants(rests) { %>
            <div class="scrollable">
            <% for(i = 0; i < rests.length ; i++) { %>
                <div class="restCard">
                    <a href="/<%=rests[i]._id%>/restaurantProfile">
                    <img class="restCardImg" src="data:image/<%=rests[i].image.contentType%>;base64, <%=rests[i].image.data?rests[i].image.data.toString('base64'):""%>">
                        <div class="restCardText">
                            <h5 class="card-title"><%= rests[i].nameSpaced %></h5>
                            
                            <p class="card-text">
                                <% if (rests[i].rating == 0) { %>
                                    No Ratings Yet (0) &nbsp;&nbsp;|&nbsp;&nbsp;  Pricing: <%= rests[i].pricing %>/4
                                <% } else { %> 
                                    Rating: <%= rests[i].rating %>/5  &nbsp;&nbsp;|&nbsp;&nbsp;  Pricing: <%= rests[i].pricing %>/4
                                <% } %>
                            </p>
                            <p class="card-text">
                                <% for(j = 0; j < rests[i].tags.length; j++ ){ %>
                                    <% if(j == 3){ %>
                                    <%     break; %>
                                    <% } else if (j == 2 || j == rests[i].tags.length-1 ) {%>
                                        <%= rests[i].tags[j]%>
                                    <% } else {%>
                                        <%= rests[i].tags[j]%> &nbsp;&middot;&nbsp;
                                    <% } %>
                                <% } %>
                            </p>
                            <p class="card-text"><small class="text-muted"><%= rests[i].address %></small></p>
                        </div> 
                    </div>   
                    </a>
            <% } %>
            </div>
        <% } %>

            <%- include('./partials/navbar.ejs') %>
            <div style="padding-left: 2%; padding-right: 2%;">
                <br>
                <br>
                <h2 class="title">The Best In Town!</h2>
                <img class="banner" src="/uploads/explorePage/Explore1.jpg">
                <% loadRestaurants(restsRating) %>
                <br><br>
                <h2 class="title">Affordable Choices</h2>
                <img class="banner" src="/uploads/explorePage/Explore2.jpg">
                <% loadRestaurants(restsPriceLH) %>
                <br><br>
                <h2 class="title">Treat Yo'self</h2>
                <img class="banner" src="/uploads/explorePage/Explore3.jpg">
                <% loadRestaurants(restsPriceHL) %>
            </div>


        <!-- CSS only for bootstrap--> 
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    </body>
</html>